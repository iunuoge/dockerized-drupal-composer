{
    "name": "squareweave/drupal-composer",
    "description": "Project template for Drupal 8 projects with composer and Docker",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0.20"
    },
    "provide": {
        "drupal/core": "*",
        "drupal/drupal": "*"
    },
    "extra": {
        "installer-paths": {
            "/var/www/modules/contrib/{$name}": ["type:drupal-module"],
            "/var/www/profiles/contrib/{$name}": ["type:drupal-profile"],
            "/var/www/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}